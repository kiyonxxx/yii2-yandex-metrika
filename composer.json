{
    "name": "kiyonxxx/yii2-yandex-metrika",
    "type": "yii2-extension",
    "license": "MIT",
    "homepage": "https://gitlab.com/dicr/yii2-yandex-metrika",
    "description": "Яндекс.Метрика API клиент для Yii2",
    "keywords": ["dicr", "yii2", "yandex", "metrika", "api", "client"],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",

        "yiisoft/yii2": "~2.0",

        "kiyonxxx/yii2-helper": "1.0.0",
        "kiyonxxx/yii2-http": "1.0.1",
        "kiyonxxx/yii2-json": "1.0.0",
        "kiyonxxx/yii2-validate": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "dicr\\yandex\\metrika\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "url": "https://github.com/kiyonxxx/yii2-helper",
            "type": "vcs"
        },
        {
            "url": "https://github.com/kiyonxxx/yii2-http",
            "type": "vcs"
        },
        {
            "url": "https://github.com/kiyonxxx/yii2-json",
            "type": "vcs"
        },
        {
            "url": "https://github.com/kiyonxxx/yii2-validate",
            "type": "vcs"
        },
        {"type": "composer", "url": "https://asset-packagist.org"}
    ],
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "~9.5"
    }
}
